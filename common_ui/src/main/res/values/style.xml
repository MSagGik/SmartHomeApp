<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/text_size_bottom_navigation_menu</item>
        <item name="itemTextAppearanceActive">@style/BottomNavigationView</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavigationView</item>
        <item name="android:background">@color/background_base</item>
        <item name="itemIconTint">@color/bottom_navigation_menu_color</item>
        <item name="itemTextColor">@color/bottom_navigation_menu_color</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemRippleColor">@null</item>
    </style>

    <style name="FragmentHolderStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_22s</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textFontWeight">300</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="HeaderOne">
        <item name="android:textSize">@dimen/text_size_22s</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/text_base</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="HeaderTwo">
        <item name="android:textSize">@dimen/text_size_16s</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/text_base</item>
        <item name="android:textFontWeight">300</item>
    </style>

    <style name="HeaderTree">
        <item name="android:textSize">@dimen/text_size_12s</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/text_base</item>
        <item name="android:textFontWeight">100</item>
    </style>

    <style name="SwitchSettingTheme">
        <item name="thumbTint">@color/grey_dark</item>
        <item name="trackTint">@color/background_base</item>
        <item name="android:checked">false</item>
    </style>

</resources>